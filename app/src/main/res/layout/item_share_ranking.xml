<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="22px"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="54px"
        android:layout_height="60px"
        android:layout_gravity="center"
        android:layout_marginLeft="20px"
        android:src="@mipmap/one" />

    <ImageView
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_marginLeft="26px"
        android:src="@mipmap/ic_launcher" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="80px"
        android:layout_marginBottom="8px"
        android:layout_marginLeft="18px">

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ZHUBAJIE"
            android:textColor="#e9573f"
            android:textSize="30px" />

        <TextView
            android:id="@+id/tv_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_below="@id/tv_user_name"
            android:text="白银"
            android:textSize="18px" />

        <TextView
            android:id="@+id/tv_goods_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_user_name"
            android:layout_toRightOf="@id/tv_goods"
            android:text="空"
            android:textColor="#009944"
            android:textSize="18px" />

        <TextView
            android:id="@+id/tv_trade_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_goods"
            android:text="2017-1-6 17:56"
            android:textSize="18px" />

        <TextView
            android:layout_marginRight="18px"
            android:id="@+id/id_incom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="收益" />

        <TextView
            android:id="@+id/id_incom_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_incom"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18px"
            android:text="+9999.99" />
    </com.zhy.autolayout.AutoRelativeLayout>


</com.zhy.autolayout.AutoLinearLayout>

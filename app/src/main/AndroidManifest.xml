<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.xinyu.mwp">

    <application
        android:name=".base.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!--AutoLayout注明设计稿尺寸-->
        <meta-data
            android:name="design_width"
            android:value="640"></meta-data>
        <meta-data
            android:name="design_height"
            android:value="1136"></meta-data>

        <activity
            android:name=".ui.activities.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.activities.RegisterActivity"/>
        <activity android:name=".ui.activities.SetTradePwdActivity"/>
        <activity android:name=".ui.activities.SetPetNameActivity"/>
        <activity android:name=".ui.activities.LogonActivity"/>

        <!--跟单-->
        <activity
            android:name=".ui.activities.TraceBillActivity"
            android:screenOrientation="portrait"/>
        <!--买涨-->
        <activity
            android:name=".ui.activities.BuyPlusActivity"
            android:screenOrientation="portrait"/>
        <!--买跌-->
        <activity
            android:name=".ui.activities.BuyMinusActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>